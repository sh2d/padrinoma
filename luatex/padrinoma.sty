\RequirePackage{expl3}
\ProvidesExplPackage{padrinoma}{2014/08/19}{0.2}{Pattern driven node manipulation in LuaTeX (SH)}
\NeedsTeXFormat{LaTeX2e}[1999/12/01]
% Test for the LuaTeX engine.
\msg_new:nnn{padrinoma}{bad-engine}{LuaTeX~engine~required.~You~could~try~with~the~`lua(la)tex'~command.}
\luatex_if_engine:TF{}{\msg_fatal:nn{padrinoma}{bad-engine}}
% Lua module version management.
\RequirePackage{luatexbase-modutils}
% Load padrinoma manipulation module.
\directlua name {padrinoma}{
  % Reserve a global variable for our namespace.
  padrinoma = {}
  % Set-up a language identifier to language number translation table.
  padrinoma.language = {}
}
% We use expl3 syntax.
\RequirePackage{xparse}
% Package interface uses key-value syntax.
\RequirePackage{l3keys2e}
% Declare keys.
\keys_define:nn {padrinoma} {
  language .clist_set:N = \l_pdnm_opt_language_clist,
  language .value_required:,
}
% Parse class and package options.
\ProcessKeysOptions{padrinoma}
% Iterate over language identifiers.
\clist_map_inline:Nn\l_pdnm_opt_language_clist{
  % Convert language identifiers to numbers and store them in a global
  % Lua table for later reference.
  \directlua{
    local~language = '#1'~
    local~language_num = \int_use:c{l@#1}~
    if~type(language_num) == 'number' then~
      padrinoma.language[language] = language_num~
    end~
  }
}
